#!/usr/bin/env bash

source ./bin/create-envfile

bin/magento-extract

if [ $? -eq 1 ]; then
    echo "Something went wrong when extracting Magento application."
    exit 1
fi

bin/up
bin/setup-vhost

if [ $? -eq 1 ]; then
    echo "Semething went wrong when trying to setup virtual host."
    exit 1
fi

bin/copytocontainer --all
bin/install

if [ $? -eq 1 ]; then
    echo "Something went wrong with the installation process."
    exit 1
fi

echo "Enjoy your new Magento installation!"
